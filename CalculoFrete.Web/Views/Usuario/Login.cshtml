@model CalculoFrete.Web.Models.Usuario

@{
    ViewBag.Title = "Login";
}

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="container-login">
    <div class="row">
        
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Usuario", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form" }))
            {
                <h2 class="form-signin-heading text-center">@Config.App_Name</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.email) })
                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                
                @Html.PasswordFor(m => m.senha, new { @class = "form-control", @placeholder =  @Html.DisplayNameFor(m => m.senha) })
                @Html.ValidationMessageFor(m => m.senha, "", new { @class = "text-danger" })

                <div class="form-group">
                        @Html.CheckBoxFor(m => m.LembrarMe)
                        @Html.LabelFor(m => m.LembrarMe)
                </div>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>

             }
        </section>

    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


