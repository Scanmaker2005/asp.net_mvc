<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Config.App_Name</title>
    @Scripts.Render("~/bundles/jquery")


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(@Config.App_Name, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Operações
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Consulta de Frete", "ConsultaFrete", "Operacao")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Cadastros
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Transportadoras", "Transportadoras", "Cadastro")</li>
                                <li class="nav-divider"></li>
                                <li>@Html.ActionLink("Usuários", "Usuarios", "Cadastro")</li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Relatórios
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Consultas", "Consultas", "Relatorio")</li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
                        <li><a>@User.Identity.Name</a></li>
                        <li><a href="javascript:sair()">Sair</a></li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="conteudo">
        @RenderBody()
    </div>
    <hr />
    <div class="container">
        <footer>
            <p>&copy; @DateTime.Now.Year - @Config.App_Name</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/helpers")
    @RenderSection("scripts", required: false)

    <script>
        function sair()
        {
            messageBox.confirm("Deseja mesmo sair ?", function ()
            {
                form.submit( "@FormMethod.Post" , "/Usuario/LogOff", {});
            });
        }
    </script>
</body>
</html>